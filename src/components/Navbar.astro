---
const title= '<Astro/>'
---

<header>
  <!-- component -->
  <div class="inset-x-0">
    <div class="antialiased bg-gray-100">
      <div class="w-full text-gray-700 bg-white">
        <div
          x-data="{ open: true }"
          class="flex flex-col max-w-screen-xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8"
        >
          <div class="flex flex-row items-center justify-between p-4">
            <a
              href="#"
              class="text-xl font-bold tracking-widest text-gray-900 uppercase rounded-lg focus:outline-none focus:shadow-outline "
              >{title}</a
            >
            <button
              class="rounded-lg md:hidden focus:outline-none focus:shadow-outline"
              
            >
              <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                <path
                  x-show="!open"
                  fill-rule="evenodd"
                  d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                  clip-rule="evenodd"></path>
                <path
                  x-show="open"
                  fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
          <nav
            id="nav"
            class="flex-col flex-grow hidden pb-4 md:pb-0 md:flex md:justify-end md:flex-row [&>a]:text-lg relative [&>a]:relative [&>a]:z-10"
          >
            <a
              class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900  focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="#">Inicio</a
            >
            <a
              class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900  focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="#">Proyectos</a
            >
            <a
              class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900  focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="#">Habilidades</a
            >
            <a
              class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900  focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="#">Contacto</a
            >
          </nav>
          <div id="hover" class="absolute rounded-md  bg-gray-200 transition-all duration-200 ease-in-out top-[var(--top)] left-[var(--left)] w-[var(--whidth)] h-[var(--height)]"></div>
        </div>
      </div>
    </div>
  </div>
</header>


<script>
  const hover = document.getElementById("hover");
  const li = document.querySelectorAll('a');

  li.forEach(item=>{
    item.addEventListener('mouseover',()=>{

      const {top,left,width,height}= item.getBoundingClientRect()
      hover.style.opacity='100'

      hover.style.setProperty('top',`${top}px`)
      hover.style.setProperty('left',`${left}px`)
      hover.style.setProperty('width',`${width}px`)
      hover.style.setProperty('height',`${height}px`)
    })

    item.addEventListener('mouseleave',()=>{
      hover.style.opacity='0'
    })
  })

</script>


<script>
  const nav = document.getElementById("nav");
  const button = document.querySelector("button");
  const openIcon = document.querySelector('path[x-show="!open"]');
  const closeIcon = document.querySelector('path[x-show="open"]');

  closeIcon.classList.add('hidden')
  button.addEventListener("click", () => {

    
      closeIcon.classList.toggle('hidden');
      openIcon.classList.toggle('hidden')
    
    nav.classList.toggle("hidden");
    nav.classList.toggle("flex");
  });
</script>
