---
import Card from "./ui/CardProyect.astro";

interface proyectData{
  title:string,
  desc:string,
  img:string,

  link:string,
  demo:string
}

const proyect:proyectData[] = [
  {
    title: "Numeria",
    desc: "Hace los cálculos aburridos más divertidos Una aplicación web para realizar desde operaciones simples hasta complejos cálculos matemáticos de forma rápida y sencilla.",link:'',demo:"",img:"/img/Numeria.png",
  },
  {
    title: "Task List",
    desc: "Tu asistente de productividad desde la terminal.Una práctica herramienta de línea de comandos para gestionar tus tareas diarias. Permite crear, editar, marcar como completadas y eliminar tareas fácilmente.",link:'',demo:"",img:"/img/todo.png"
  },
];
---

<section class="bg-astro-100 px-10 py-10  ">
  <h1 class="text-5xl font-extrabold text-center text-white mb-2">Proyectos</h1>
  <span class="text-center text-white mb-7 text-xl block underline font-medium"
    >Descubre lo que he creado</span
  >
  <div class="grid md:grid-cols-2  gap-x-5 gap-y-5">
    {proyect.map(({title,desc,link,demo,img})=>{
        return(
            <Card title={title} desc={desc} link={link} demo={demo} img={img} />
        )
    })}
  </div>
</section>
