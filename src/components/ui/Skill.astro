---
interface Props{
  title:string
}
const { title } = Astro.props;
---

<article class="border-2 border-gray-700 rounded-lg px-5 py-2 bg-astro-100 shadow-md hover:shadow-orange-500">
  <h2 class="text-center text-xl text-orange-500 font-bold border-b mb-3">{title}</h2>

  <ul
    class="flex flex-wrap justify-center gap-5 text-white text-lg font-medium [&>li]:opacity-80 "
  >
  <slot class=""/>
  </ul>
</article>
