---
interface Props {
  title: string;
  desc: string;
  link: string;
  demo?: string;
  img: string;
  techs: string[];
}

const { title, desc, link, demo, img,techs } = Astro.props;
---

<article class="relative overflow-hidden rounded-lg group shadow-md">
  <img
    src={img}
    alt=""
    class="absolute inset-0 h-full object-cover w-full md:scale-110"
  />

  <div
    class="absolute inset-0 h-full w-full bg-gradient-to-t from-black to-transparent md:opacity-0 group-hover:opacity-100"
  >
  </div>

  <div
    class="relative mt-52 p-4 font-semibold text-white z-10 translate-y-3 md:opacity-0 md:group-hover:opacity-100 md:group-hover:translate-y-0 duration-200 ease-in-out transition-all"
  >
    <h2 class="text-2xl font-semibold text-orange-500">{title}</h2>
    <p class="text-base text-white/75">
      {desc}
    </p>
    <div class="relative z-20 mt-3 mb-3 flex">
      <div class="flex justify-around ">
        <a href={link} class="flex items-center gap-x-1 w-20"
          ><svg
            class="text-orange-500 hover:-rotate-12"
            width="30"
            height="30"
            viewBox="0 0 256 256"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill="currentColor"
              d="M136.37 187.53a12 12 0 0 1 0 17l-5.94 5.94a60 60 0 0 1-84.88-84.88l24.12-24.11A60 60 0 0 1 152 99a12 12 0 1 1-16 18a36 36 0 0 0-49.37 1.47l-24.1 24.08a36 36 0 0 0 50.92 50.92l5.94-5.94a12 12 0 0 1 16.98 0Zm74.08-142a60.09 60.09 0 0 0-84.88 0l-5.94 5.94a12 12 0 0 0 17 17l5.94-5.94a36 36 0 0 1 50.92 50.92l-24.11 24.12A36 36 0 0 1 120 139a12 12 0 1 0-16 18a60 60 0 0 0 82.3-2.43l24.12-24.11a60.09 60.09 0 0 0 .03-84.91Z"
            ></path>
          </svg>Link</a
        >

        {
          demo && (
            <a href={demo} class="flex items-center gap-x-1 w-20 ">
              <svg
                class="text-orange-500 hover:-rotate-12"
                width="30"
                height="30"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill="currentColor"
                  d="M4 1h16a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1m0 8h16a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-4a1 1 0 0 1 1-1m0 8h16a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-4a1 1 0 0 1 1-1M9 5h1V3H9v2m0 8h1v-2H9v2m0 8h1v-2H9v2M5 3v2h2V3H5m0 8v2h2v-2H5m0 8v2h2v-2H5Z"
                />
              </svg>
              Demo
            </a>
          )
        }
      </div>

      <div class="flex gap-x-2 w-full flex-grow">
        {
          techs.map(tech=>{
            return(
              <span class="font-semibold text-orange-500 px-4 py-1 rounded-lg bg-slate-900 ">{tech}</span>
            )

          })
        }

      </div>
    </div>

    <script></script>
  </div>
</article>
